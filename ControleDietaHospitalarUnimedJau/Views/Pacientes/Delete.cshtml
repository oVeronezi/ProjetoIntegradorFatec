@model ControleDietaHospitalarUnimedJau.Models.Paciente

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Tem certeza de que deseja excluir este paciente?</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumQuarto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumQuarto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodPulseira)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodPulseira)
        </dd>

        <dt class="col-sm-2">
            Dieta
        </dt>
        <dd class="col-sm-10">

            @if (Model.DetalhesDieta != null)
            {
                <strong>@Html.DisplayFor(model => model.DetalhesDieta.NomeDieta)</strong>
            }
            else
            {
                <span class="text-danger">Dieta Não Encontrada (ID: @Model.IdDieta)</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
    </form>
</div>