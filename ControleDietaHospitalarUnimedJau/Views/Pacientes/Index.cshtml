@model IEnumerable<ControleDietaHospitalarUnimedJau.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h2 class="fw-bold text-center">Pacientes</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-success"><img src="~/img/person_add.svg" alt="Adicionar Paciente" /></a>

        <form asp-action="Index" method="get" class="d-flex" style="width: 40%;">
            <input type="text" name="searchString" class="form-control me-2"
                   placeholder="Buscar paciente pelo nome..."
                   value="@ViewData["CurrentFilter"]" />

            <input type="submit" value="Buscar" class="btn btn-primary" />

            <a asp-action="Index" class="btn btn-outline-secondary ms-1">Limpar</a>
        </form>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-2">@item.Nome</h5>

                        <p class="mb-1"><strong>Quarto:</strong> @item.NumQuarto</p>
                        <p class="mb-1"><strong>Cód. Pulseira:</strong> @item.CodPulseira</p>

                        <hr />

                        <p class="mb-1">
                            <strong>Dieta:</strong>

                            @if (item.DetalhesDieta != null)
                            {
                                @item.DetalhesDieta.NomeDieta
                            }
                            else
                            {
                                <span class="text-muted">Não vinculada</span>
                            }
                        </p>

                        @if (item.DetalhesDieta?.ItensAlimentares != null && item.DetalhesDieta.ItensAlimentares.Any())
                        {
                            <ul class="list-unstyled small mb-2">
                                @foreach (var dietaItem in item.DetalhesDieta.ItensAlimentares)
                                {
                                    <li>• @dietaItem</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted small mb-2">Sem itens alimentares</p>
                        }
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Deletar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>