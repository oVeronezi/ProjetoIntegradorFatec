@model ControleDietaHospitalarUnimedJau.Models.Paciente

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumQuarto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumQuarto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodPulseira)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodPulseira)
        </dd>

        <dt class="col-sm-2">
            Dieta
        </dt>
        <dd class="col-sm-10">
            @if (Model.DietaVinculada != null)
            {
                <strong>@Html.DisplayFor(model => model.DietaVinculada.NomeDieta)</strong>
            }
            else
            {
                <span class="text-danger">Dieta Não Encontrada (ID: @Model.IdDieta)</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>