@model ControleDietaHospitalarUnimedJau.ViewModels.ResetPasswordViewModel;
@{
    ViewData["Title"] = "Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Reset Password</h1>
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="ResetPassword">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Token" />
    <div class="form-group">
        <label asp-for="Email">E-mail:</label>
        <input type="email" asp-for="Email" class="form-control" />
        <label asp-for="NewPassword">Senha:</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
        <label asp-for="ConfirmPassword">Confirmar a Senha:</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
        <button class="btn btn-primary" type="submit">Enviar</button>

    </div>
</form>