@model IEnumerable<ControleDietaHospitalarUnimedJau.Models.Bandeja>

@{
    ViewData["Title"] = "Bandejas";
}

<div class="container mt-4">
    <h2 class="fw-bold text-center">Bandejas</h2>

    <div class="d-flex justify-content-between align-items-center mb-4 cols-1">
        
        <a asp-action="Create" class="btn btn-success">
            <img src="~/img/assignment_add.svg" alt="Adicionar Bandeja" />
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            Código da Bandeja: @item.CodBandeja
                        </h5>

                        <p class="card-text mb-3">
                            <strong>Tipo de Dieta:</strong>
                            @(item.DetalhesDieta != null ? item.DetalhesDieta.NomeDieta : "Não especificado")
                        </p>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Excluir</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
