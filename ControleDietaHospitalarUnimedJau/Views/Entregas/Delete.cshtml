        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusValidacao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPaciente)
        </dt>
