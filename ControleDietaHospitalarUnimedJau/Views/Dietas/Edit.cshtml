@model ControleDietaHospitalarUnimedJau.Models.Dieta

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Dietas</h1>

<h4>Dieta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group"">
                <label asp-for="NomeDieta" class="control-label"></label>
                <input asp-for="NomeDieta" class="form-control" />
