@model IEnumerable<ControleDietaHospitalarUnimedJau.Models.Dieta>

@{
    ViewData["Title"] = "Index";
}

<h1>Dietas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDieta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItensAlimentares)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDieta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItensAlimentares)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn border border-1 ">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
