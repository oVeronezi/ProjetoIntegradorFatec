@model ControleDietaHospitalarUnimedJau.Models.Copeira

@{
    ViewData["Title"] = "Detalhes da Copeira";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 rounded-3 shadow-lg">

                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-people"></i> Detalhes da Funcionária</h4>
                    @if (Model.Ativo)
                    {
                        <span class="badge text-success px-3 py-2 rounded-pill">Ativa</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white px-3 py-2 rounded-pill">Inativa</span>
                    }
                </div>

                <div class="card-body p-5 text-center">
                    <small class="text-uppercase fw-bold">Nome da Copeira</small>
                    <h2 class="display-6 fw-bold mt-2">@Html.DisplayFor(model => model.Nome)</h2>
                    <hr class="my-4 w-50 mx-auto opacity-25">
                    <p class=""><i class="bi bi-id-badge"></i> ID: @Model.Id</p>
                </div>

                <div class="card-footer p-4 border-top-0 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Voltar</a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success px-4 shadow-sm">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>