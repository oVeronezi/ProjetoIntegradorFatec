<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControleDietaHospitalarUnimedJau</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleDietaHospitalarUnimedJau.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=dark_mode" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="@Url.Content("~/img/layout_set_logo.png")" alt="Logo Unimed" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dietas" asp-action="Index">Dietas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bandejas" asp-action="Index">Bandejas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Entregas" asp-action="Index">Entregas</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Relatorios" asp-action="Index">Relatorios</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pessoas
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Copeiras" asp-action="Index">Copeiras</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                                
                            </ul>
                        </li>
                        

                    </ul>
                    <div id="toggle-dark" class="ms-auto">
                        
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">&copy; 2025 - ControleDietaHospitalarUnimedJau - Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // 1. Cria a tag <img> (ainda sem 'src')
        const img = document.createElement("img");
        const toggle = document.getElementById('toggle-dark');
        const body = document.body;
        
        img.classList.add('zoom');

        // 2. Adiciona a tag <img> vazia dentro do seu botão 'toggle'
        toggle.appendChild(img);

        // 3. Função que decide qual ícone mostrar
        function atualizarIcone() {
            if (body.classList.contains('dark-mode')) {
                // Se ESTIVER em dark-mode, mostra a Lua
                img.src = "./img/lua_dark_mode.svg";
                img.alt = "Mudar para modo claro";
            } else {
                img.src = "./img/sol_light_mode.png"; 
                img.alt = "Mudar para modo escuro";
            }
        }

        if (localStorage.getItem('dark-mode') === 'true') {
            body.classList.add('dark-mode');
        }
        atualizarIcone();

        toggle.addEventListener('click', () => {
            // Inverte a classe
            body.classList.toggle('dark-mode');

            // Verifica o novo estado e salva no localStorage
            const isDark = body.classList.contains('dark-mode');
            localStorage.setItem('dark-mode', isDark);

            // 7. CHAMA A FUNÇÃO NOVAMENTE
            // (para trocar o ícone após o clique)
            atualizarIcone();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
