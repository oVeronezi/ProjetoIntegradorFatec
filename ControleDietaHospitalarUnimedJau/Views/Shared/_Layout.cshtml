<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControleDietaHospitalarUnimedJau</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleDietaHospitalarUnimedJau.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=dark_mode" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        /* Garante que o footer fica no fundo (Sticky Footer) */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
        /* Efeito hover nos links do footer */
        .hover-link:hover {
            color: #ccffdc !important;
            text-decoration: underline !important;
            transition: color 0.3s;
        }
        /* Correções para o Dark Mode (que já tinhas) */
        @@media (prefers-color-scheme: dark) {
            /* ... (aqui entra o CSS global de dark mode que te passei antes, se quiseres) ... */
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="@Url.Content("~/img/layout_set_logo.png")" alt="Logo Unimed" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dietas" asp-action="Index">Dietas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bandejas" asp-action="Index">Bandejas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Entregas" asp-action="Index">Entregas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Relatorios" asp-action="Index">Relatorios</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pessoas
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Copeiras" asp-action="Index">Copeiras</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                            </ul>
                        </li>

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Sair</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Entrar</a>
                            </li>
                        }
                    </ul>
                    <div id="toggle-dark" class="ms-auto"></div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <br /><br />
    </div>
    <!-- Footer -->
    <br /><br />
    <footer class="mt-auto" style="background-color: #009c3b; color: white; padding-top: 40px;">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold mb-3" style="border-bottom: 2px solid #007a2f; display: inline-block; padding-bottom: 5px;">Unimed Jaú</h5>
                    <p class="small">
                        Sistema de Controle de Dietas Hospitalares.<br>
                        Garantindo qualidade e segurança na alimentação dos nossos pacientes.
                    </p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold mb-3" style="border-bottom: 2px solid #007a2f; display: inline-block; padding-bottom: 5px;">Acesso Rápido</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none hover-link"><i class="bi bi-house-door"></i> Início</a></li>
                        <li class="mb-2"><a asp-controller="Entregas" asp-action="Index" class="text-white text-decoration-none hover-link"><i class="bi bi-truck"></i> Entregas</a></li>
                        <li class="mb-2"><a asp-controller="Pacientes" asp-action="Index" class="text-white text-decoration-none hover-link"><i class="bi bi-people"></i> Pacientes</a></li>
                        <li class="mb-2"><a asp-controller="Relatorios" asp-action="Index" class="text-white text-decoration-none hover-link"><i class="bi bi-file-earmark-text"></i> Relatórios</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold mb-3" style="border-bottom: 2px solid #007a2f; display: inline-block; padding-bottom: 5px;">Contato</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><i class="bi bi-geo-alt-fill me-2"></i> Jaú - SP</li>
                        <li class="mb-2"><i class="bi bi-envelope-fill me-2"></i> nutricao@unimedjau.com.br</li>
                        <li class="mb-2"><i class="bi bi-telephone-fill me-2"></i> (14) 3600-0000</li>
                    </ul>
                </div>
            </div>
            <hr style="border-color: rgba(255,255,255,0.3);">
            <div class="row py-3">
                <div class="col-md-6 text-center text-md-start small">
                    &copy; @DateTime.Now.Year - <strong>Controle de Dietas Hospitalar</strong>
                    <span> | </span>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none hover-link">Conhecer os Desenvolvedores</a>
                </div>
                <div class="col-md-6 text-center text-md-end small">
                    Desenvolvido para Unimed Jaú
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const img = document.createElement("img");
        const toggle = document.getElementById('toggle-dark');
        const body = document.body;

        img.classList.add('zoom');
        toggle.appendChild(img);

        function atualizarIcone() {
            if (body.classList.contains('dark-mode')) {
                img.src = "/img/lua_dark_mode.svg";
                img.alt = "Mudar para modo claro";
            } else {
                img.src = "/img/sol_light_mode.png";
                img.alt = "Mudar para modo escuro";
            }
        }

        if (localStorage.getItem('dark-mode') === 'true') {
            body.classList.add('dark-mode');
        }
        atualizarIcone();

        toggle.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            const isDark = body.classList.contains('dark-mode');
            localStorage.setItem('dark-mode', isDark);
            atualizarIcone();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>